{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "auth"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/payroll/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "payroll"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/integration/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "integration"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ],
      "UpstreamPathTemplate": "/reporting/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "SwaggerKey": "reporting"
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/health/payroll",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5003
        }
      ],
      "UpstreamPathTemplate": "/health/integration",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "payroll",
      "Config": [
        {
          "Name": "Payroll API",
          "Version": "v1",
          "Url": "http://localhost:5002/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "integration",
      "Config": [
        {
          "Name": "Integration API",
          "Version": "v1",
          "Url": "http://localhost:5003/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "auth",
      "Config": [
        {
          "Name": "auth API",
          "Version": "v1",
          "Url": "http://localhost:5001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "reporting",
      "Config": [
        {
          "Name": "reporting API",
          "Version": "v1",
          "Url": "http://localhost:5004/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}

//---

//## What This Configuration Does:
//```
//Gateway Route                    → Downstream Service
//─────────────────────────────────────────────────────
///auth/{anything}                 → AuthService (5001)
///payroll/{anything}              → PayrollService (5002)
///integration/{anything}          → IntegrationService (5003)
///reporting/{anything}            → ReportingService (5004)
///health/payroll                  → PayrollService health
///health/integration              → IntegrationService health
//```

//**Example:**
//```
//Request:  http://localhost:5000/payroll/Payroll/process/COMP123
//          ↓
//Ocelot:   Matches /payroll/{everything}
//          ↓
//Forwards: http://localhost:5002/api/Payroll/process/COMP123